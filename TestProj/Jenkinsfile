pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/it-outsource-jayesh/TestProj.git'
            }
        }

        stage('Restore Packages') {
            steps {
                bat 'dotnet restore'    // use 'bat' on Windows
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --configuration Release'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'dotnet test --no-build --verbosity normal'
            }
        }
    }

    post {
        always {
            echo "Build Pipeline Finished!"
        }
    }
}
